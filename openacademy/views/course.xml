<odoo>
    <record model="ir.ui.view" id="course_view_tree">
        <field name="name">Course Template List</field>
        <field name="model">openacademy.course</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name" />
                <field name="description" />
                <field name="responsible_id" />
            </tree>
        </field>
    </record>

    
    <!-- Actions -->
    <record model="ir.actions.act_window" id="action_course">
      <field name="name">Course Action</field>
      <field name="res_model">openacademy.course</field>
      <field name="view_mode">tree,form</field>
    </record>

    
    
     <!-- Top menu item -->
    <menuitem name="OpenA" id="menu_root"/>
    <!-- Top menu item -->
    <menuitem name="Course" id="menu_course_top" parent="menu_root" sequence="1" />
    <!-- actions -->
    <menuitem name="TEST" id="menu_course" parent="menu_course_top"
              action="action_course"/>
</odoo>
